<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Create Account</h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">User Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter User Name"
                    name="username" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Password</label>
                    <input type="password" class="form-control"
                    id="passwordTextField"
                    placeholder="Enter your password"
                    name="password" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email"
                    name="email" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Display Name</label>
                    <input type="text" class="form-control"
                    id="displayNameTextField"
                    placeholder="Enter your display name"
                    name="displayname" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Lets Go</button>
                
            </form>
            
        </div>

    </div>
</div>




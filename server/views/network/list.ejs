<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            <a href="/netList/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Contact</a>
            <a href="/netList" class="btn btn-success" type="button" aria-label="Right Align">
                <i class="fab fa-battle-net"></i> Refresh!</a>

            <br><br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-3">Number</th>
                    <th class="text-center col-5">Email</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < NetList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= NetList[count].name %></td>
                        <td class="text-center col-3"><%= NetList[count].number %></td>
                        <td class="text-center col-5"><%= NetList[count].email %></td>
                        <td class="text-center col-1">
                            <a href="/netList/edit/<%= NetList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/netList/delete/<%= NetList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





